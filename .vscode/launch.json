{
	"configurations": [
		{
			"name": "Debug MyOS",
			"type": "gdb",
			"request": "attach",
			"target": "localhost:1234",
			"remote": true,
			"gdbpath": "gdb",
			"cwd": "${workspaceRoot}",
			"valuesFormatting": "parseText",
			//"autorun": ["set architecture i386:x86-64"],
			"debugger_args": [
				"-ix", "${workspaceFolder}/conf/gdb_init_real_mode.txt",
				"-ex", "set tdesc filename ${workspaceFolder}/conf/target.xml",
				"-ex", "br *0x7c00",
				"-ex", "c"
			]
		}
	]
}